<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EnkelBillettActivity">

    <Button
        android:id="@+id/approveposition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Trykk her for å godkjenne posisjon"
        android:textColor="#000"
        android:drawableRight="@drawable/arrowright"
        android:gravity="left|right"/>

    <Button
        android:id="@+id/buyticket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Kjøp billett"
        android:textColor="#000"
        android:drawableRight="@drawable/arrowright"
        android:drawableLeft="@drawable/icon1"
        android:gravity="left|center|right"/>

    <Button
        android:id="@+id/seemap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Ser map nærmere"
        android:textColor="#000"
        android:drawableRight="@drawable/arrowright"
        android:drawableLeft="@drawable/icon2"
        android:gravity="left|center|right"/>
</LinearLayout>